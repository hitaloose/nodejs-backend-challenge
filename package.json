{
  "name": "nodejs-backend-challenge",
  "version": "1.0.0",
  "description": "The project is a simple challenge to test your skills in building APIs using the Node.js framework.",
  "main": "dist/app.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig-build.json",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles --runInBand",
    "test:unit": "npm run test -- --watch -c jest-unit.config.ts",
    "test:integration": "npm run test -- --watch -c jest-integration.config.ts",
    "test:ci": "npm run test -- --coverage"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/faker": "^5.5.3",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "cross-env": "^7.0.3",
    "faker": "^5.5.3",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.9.0",
    "typescript": "^5.4.5"
  }
}
